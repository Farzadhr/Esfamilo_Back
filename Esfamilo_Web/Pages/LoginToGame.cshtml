@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#divRemember").click(function (e) {
            e.preventDefault();
            checkremember()
        });
        checkremember()
        function checkremember() {
            if ($("#divRemember").hasClass("divChecked")) {
                $("#inputRemember").attr("checked", false);
                $("#divRemember").removeClass("divChecked");
            } else {
                $("#inputRemember").attr("checked", true);
                $("#divRemember").addClass("divChecked");
            }
        }
    </script>
}